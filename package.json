{
  "name": "assemblyscript-playground",
  "type": "module",
  "version": "1.0.0",
  "description": "A playground for experimenting with AssemblyScript",
  "main": "src/index.js",
  "scripts": {
    "build": "rollup -c",
    "watch": "rollup -c -w --no-watch.clearScreen",
    "start": "sirv --dev .",
    "dev": "run-p watch start",
    "test": "uvu tests"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/andrewiggins/assemblyscript-playground.git"
  },
