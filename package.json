  "bugs": {
    "url": "https://github.com/andrewiggins/assemblyscript-playground/issues"
  },
  "homepage": "https://github.com/andrewiggins/assemblyscript-playground#readme",
  "devDependencies": {
    "@assemblyscript/loader": "^0.18.7",
    "@rollup/plugin-node-resolve": "^11.1.1",
    "@rollup/plugin-typescript": "^8.1.1",
    "assemblyscript": "^0.18.7",
    "npm-run-all": "^4.1.5",
    "rollup": "^2.38.5",
    "rollup-plugin-terser": "^7.0.2",
    "sirv-cli": "^1.0.11",
    "uvu": "^0.5.1"
  }
}
